{
  "name": "codect",
  "publisher": "aurobreeze",
  "displayName": "CodeCT",
  "description": "Track and export your coding statistics",
  "repository": {
    "type": "git",
    "url": "https://github.com/AuroBreeze/codect.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codect.showStats",
    "onCommand:codect.exportStats"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codect.showStats",
        "title": "Show Code Statistics (显示代码统计)"
      },
      {
        "command": "codect.exportStats",
        "title": "Export Code Statistics"
      }
    ],
      "menus": {
        "commandPalette": [
          {
            "command": "codect.exportStats",
            "when": "true"
          }
        ]
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
